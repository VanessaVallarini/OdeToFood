@page "{restauranteId:int?}" 
    @*o ponto de interrogação torna o id um parâmetro opcional*@
@model OdeToFood.Pages.Restaurantes.EditarModel
@{
    ViewData["Title"] = "Editar";
}

<h2>Editar @Model.Restaurante.Nome</h2>

<form method="post">
    @*hidden significa que é oculto para o usuário*@
    <input type="hidden" asp-for="Restaurante.Id" />
    <div class="form-group">
        <label asp-for="Restaurante.Nome"></label>
        <input asp-for="Restaurante.Nome" class="form-control" />
        <span class="text-danger" asp-validation-for="Restaurante.Nome"></span> @*exibe o erro que gerou de acordo com as validações da model*@
    </div>
    <div class="form-group">
        <label asp-for="Restaurante.Localizacao"></label>
        <input asp-for="Restaurante.Localizacao" class="form-control" />
        <span class="text-danger" asp-validation-for="Restaurante.Localizacao"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurante.Cozinha"></label>
        <select class="form-control" asp-for="Restaurante.Cozinha" asp-items="Model.Cozinhas"></select>
        <span class="text-danger" asp-validation-for="Restaurante.Cozinha"></span>
    </div>
    <button type="submit" class="btn btn-primary"> 
        <i class="fas fa-save"></i> Salvar
    </button>
</form>